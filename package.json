{
  "name": "ts-playground",
  "version": "1.0.0",
  "author": "JÃ³zef Flakus",
  "description": "TypeScript environment playground for internal presentations purposes",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "watch": "tsc -w",
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "test": "NODE_ENV=test jest --expand",
    "test:all": "NODE_ENV=test jest --expand",
    "test:watch": "NODE_ENV=test jest --expand --onlyChanged --watch",
    "test:coverage": "NODE_ENV=test jest --runInBand --coverage",
    "serve": "nodemon dist/index.js"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.5.6"
  },
  "devDependencies": {
    "@types/jasmine": "^2.8.6",
    "@types/jest": "^22.2.0",
    "jasmine-core": "^3.1.0",
    "jasmine-marbles": "^0.2.0",
    "jest": "^21.2.1",
    "nodemon": "^1.11.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^21.1.3",
    "typescript": "^2.7.2",
    "tslint": "^5.9.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JozefFlakus/ts-playground.git"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
